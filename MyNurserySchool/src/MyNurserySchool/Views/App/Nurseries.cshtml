@{ 
    ViewBag.Title = "";
}
@section Scripts {
    <script src="~/lib/angular/angular.min.js"></script>
    <script src="~/lib/angular-route/angular-route.min.js"></script>
    <script src="~/lib/angular-ui-bootstrap-bower/ui-bootstrap-tpls.js"></script>
    <script src="~/lib/underscore/underscore-min.js"></script>
    <environment names="Development">
    <script src="~/lib/_app/concat.js"></script>
    </environment>
    <environment names="Production,Staging">
    <script src="~/lib/_app/uglify.js"></script>
    </environment>
}

@if (User.IsInRole("Admin") || User.FindAll("Nursery").ToList().Count > 1)
{
    <div ng-app="app.nurseries" ng-init="isAdmin = @(User.IsInRole("Admin") ? "true" : "false")">
        <div class="col-sm-3 col-lg-2">
            <ul class="nav nav-pills nav-stacked nav-vertical">
                    <li><a ng-href="#/" class="list-group-item"><i class="fa fa-list"></i> Zoznam škôlok</a></li>
                    @if (User.IsInRole("Admin"))
                    {
                        <li><a ng-href="#/users" class="list-group-item"><i class="fa fa-group"></i> Používatelia</a></li>
                    }
            </ul>
        </div>
        <div class="col-sm-9 col-lg-10">
            <div class="container-fluid">
                <div ng-view></div>
            </div>
        </div>
    </div>
} else
{
   <div class="alert alert-danger">
       Nemáte dostatočné oprávnenie.
   </div>
}
