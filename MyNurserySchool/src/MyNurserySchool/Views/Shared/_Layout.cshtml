@inject Microsoft.Extensions.PlatformAbstractions.IApplicationEnvironment appEnv

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/font-awesome.min.css" />
    <link rel="stylesheet" href="~/lib/bootswatch/cosmo/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/toastr/toastr.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap-additions/dist/bootstrap-additions.min.css" />
    <link rel="stylesheet" href="~/lib/angular-motion/dist/angular-motion.min.css" />

    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="shortcut icon" href="~/img/child_icon.png">
</head>
<body>
    <nav class="navbar navbar-default navbar-fixed-top">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-2">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <div class="navbar-brand hidden-xs">
                    <img src="~/img/logo_white.png" alt="Logo" />
                </div>
                <div class="navbar-brand">
                    @ViewBag.Title
                </div>
            </div>

            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-2">
                <ul class="nav navbar-nav"></ul>
                <ul class="nav navbar-nav navbar-right">
                    <li><a asp-controller="Public" asp-action="Index"><i class="fa fa-home"></i>Domov</a></li>
                    <li><a asp-controller="Public" asp-action="Contact"><i class="fa fa-phone"></i>Kontakt</a></li>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="dropdown">
                            <a class="dropdown-toggle" data-toggle="dropdown" href="#"><i class="fa fa-user"></i>@User.Identity.Name</a>
                            <ul class="dropdown-menu">
                                <li><a asp-controller="Manage" asp-action="ChangePassword"><i class="fa fa-lock"></i>Zmena hesla</a></li>
                                <li><a asp-controller="Auth" asp-action="Logout"><i class="fa fa-sign-out"></i>Odhlásiť</a></li>
                            </ul>
                        </li>
                    }
                    else
                    {
                        <li><a asp-controller="Auth" asp-action="Login">Prihlásenie <i class="fa fa-sign-in"></i></a></li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <div>
        @RenderBody()
    </div>

    <footer class="panel-footer navbar-fixed-bottom">
        <div class="row">
            <div class="col-xs-offset-3 col-xs-6 text-center">&copy; @DateTime.Now.Year Čip</div>
            <div class="col-xs-3 text-right">v@(appEnv.ApplicationVersion)</div>
        </div>
    </footer>

    <script type="text/javascript" src="~/lib/jquery/dist/jquery.min.js"></script>
    <script type="text/javascript" src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    <script type="text/javascript" src="~/lib/toastr/toastr.min.js"></script>

    @RenderSection("Scripts", false)
</body>
</html>
